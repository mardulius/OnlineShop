@model List<ProductViewModel>

@{
    ViewData["Title"] = "Книжный магазин";
}



<div class="row">
    <div class="col-3 my-4">
        <h2>Фильтр</h2>
        <ul>
            <li>Фильтр1</li>
            <li>Фильтр2</li>
            <li>Фильтр3</li>
            <li>Фильтр4</li>
        </ul>
    </div>
    <div class="col-9 my-4">
        <div class="row">

            @foreach (var product in Model)
            {
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="card h-100 box-shadow">
                        <div class="row">
                            <div class="col-9">
                                <a asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">
                                    <img src="@product.ImgPath" class="card-img-top" alt="изображение книги" />
                                </a>
                            </div>
                            <div class="col-3">
                                <a asp-controller="Favorites" asp-action="Add" asp-route-productId="@product.Id" asp-route-control="@ViewContext.RouteData.Values["controller"].ToString()" asp-route-act="@ViewContext.RouteData.Values["action"].ToString()" class="btn btn-primary btn-sm"><i class="bi bi-bookmark"></i></a>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a class="text-decoration-none text-black" asp-controller="Product" asp-action="Index" asp-route-id="@product.Id">@product.Name</a>
                            </h5>
                            <div>
                                <h4>@product.Cost ₽</h4>
                            </div>
                        </div>
                        <div class="card-body d-flex align-items-end">
                            <a asp-controller="Cart" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-dark btn-sm">В корзину</a>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>

</div>





