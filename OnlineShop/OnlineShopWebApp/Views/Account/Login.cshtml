@using OnlineShopWebApp.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Вход";
}
<div class="card shadow">
    <div class="card-body">
        <form asp-controller="Account" asp-action="Login">
            <div class="validation" asp-validation-summary=ModelOnly></div>
            <div class="row justify-content-center">
                <div class="col-6">
                    <div class="mb-3">
                        <input type="text" asp-for="Login" class="form-control" placeholder="ivanov@email.com" />
                        <span asp-validation-for="Login"></span>
                    </div>
                    <div class="mb-3">
                        <input type="password" asp-for="Password" class="form-control" placeholder="пароль" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class=" mb-3 form-check text-center">
                        <input class="form-check-input" type="checkbox" asp-for="RememberMe" value="true" name="RememberMe">
                        <label asp-for="RememberMe" class="form-check-label">
                            Запомнить меня?
                        </label>
                    </div>
                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-dark">Войти</button>
                    </div>
                    <div class="mb-3 text-center">
                        <a class="card-link text-dark" asp-controller="Account" asp-action="Register">Регистрация нового пользователя</a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>
