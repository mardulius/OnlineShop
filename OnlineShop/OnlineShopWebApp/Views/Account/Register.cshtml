
<div class="card shadow">
    <div class="card-body">
        <form method="post" asp-action="Register">
            <div class="row justify-content-center">
                <div class="col-6">
                    <div class="mb-3">
                        <input type="text" class="form-control" name="Name" placeholder="логин" />
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" name="Password" placeholder="пароль" />
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" name="ConfirmPassword" placeholder="повторить пароль" />
                    </div>
                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-dark">Зарегистрироваться</button>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>
