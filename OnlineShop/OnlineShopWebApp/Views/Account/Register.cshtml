@using OnlineShopWebApp.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="card shadow">
    <div class="card-body">
        <form asp-controller="Account" asp-action="Register">
            <div class="row justify-content-center">
                <div class="col-6">
                    <div class="mb-3 text-center">
                        <h3>Регистрация</h3>
                    </div>
                    <div class="mb-3">
                        <input type="text" asp-for="Name" class="form-control" placeholder="логин" />
                         <span asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <input type="email" asp-for="Email" class="form-control" placeholder="email" />
                         <span asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <input type="password" asp-for="Password" class="form-control" placeholder="пароль" />
                         <span asp-validation-for="Password"></span>
                    </div>
                    <div class="mb-3">
                        <input type="password"  asp-for="ConfirmPassword" class="form-control" placeholder="повторить пароль" />
                         <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-dark">Зарегистрироваться</button>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>
