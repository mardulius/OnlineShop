@model List<Order>
@{
    ViewData["Title"] = "Заказы";
}

@if (Model != null)
{
    <div class="row">

        <table class="table">

            <tr>
                <th>Id</th>
                <th>ФИО</th>
                <th>Дата</th>
                <th>Сумма</th>

            </tr>

            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.FirstName @order.LastName</td>
                    <td>@order.Created</td>
                    <td>@order.TotalCost</td>

                </tr>
            }

        </table>

    </div>




}

else
{
    <figure class="text-center">
        <h3>Список заказов пуст.</h3>
    </figure>

}
