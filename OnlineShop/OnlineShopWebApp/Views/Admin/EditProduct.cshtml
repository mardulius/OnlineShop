@model Product
<div class="card shadow">
    <div class="card-body">
        <form method="post" asp-action="EditProduct">
            <div class="row justify-content-center">
                <div class="col-6">
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Name" placeholder="Имя" value="@Model.Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Cost" placeholder="Цена" value="@Model.Cost"/>
                         <span asp-validation-for="Cost"></span>
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" asp-for="Description" placeholder="Описание" value="@Model.Description"/>
                        <span asp-validation-for="Description"></span>
                    </div>
                     <div class="mb-3">
                        <input type="text" class="form-control" asp-for="ImgPath" placeholder="Картинка" value="/images/book.png"/>
                         <span asp-validation-for="ImgPath"></span>
                    </div>
                    <input type="hidden" class="form-control" asp-for="Id" value="@Model.Id"/>
                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-dark">Изменить</button>
                    </div>
                    <div class="mb-3 text-center">
                        <a class="btn btn-dark" asp-controller="Admin" asp-action="Products">Отмена</a>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>
