@using OnlineShopWebApp.ViewModels

@model UserInfoViewModel

<div class="row">
    @await Html.PartialAsync("AdminLeftPanel")
    <div class="col-9 my-2">
        <div class="card">
            <div class="card-body">
                <h3>Новый пользователь</h3>
                <form asp-controller="User" asp-action="ChangeInfo">
                    <div class="validation" asp-validation-summary=ModelOnly></div>
                    <div class="row justify-content-center">
                        <div class="col">
                            <div class="mb-3">
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="имя" value="@Model.FirstName" />
                                <span asp-validation-for="FirstName"></span>
                            </div>
                            <div class="mb-3">
                                <input type="text" asp-for="LastName" class="form-control" placeholder="фамилия" value="@Model.LastName" />
                                <span asp-validation-for="LastName"></span>
                            </div>
                            <div class="mb-3">
                                <input type="email" asp-for="Email" class="form-control" placeholder="email" value="@Model.Email" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="mb-3">
                                <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="телефон" value="@Model.PhoneNumber" />
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="col mb-3 form-group">

                                Роли:

                                @foreach (var role in Model.AllRoles)
                                {
                                    <input type="checkbox" name="UserRoles" value="@role.Name" checked="@(Model.UserRoles.Contains(role.Name) ? true : false)" />
                                    @role.Name <br />
                                }
                            </div>
                            <input type="hidden" asp-for="Id" value="@Model.Id" />
                            <div class="mb-3 text-center">
                                <button type="submit" class="btn btn-dark">Изменить</button>
                                <a class="btn btn-dark" asp-controller="User" asp-action="Index">Отмена</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>